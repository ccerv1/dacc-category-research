{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Market Map Registry",
  "description": "Registry of projects organized by quadrant and category for the market map visualization",
  "type": "object",
  "required": ["quadrants"],
  "additionalProperties": false,
  "properties": {
    "quadrants": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "horizontal_axis", "vertical_axis", "categories"],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^(atoms|bits)-(survive|thrive)$"
          },
          "horizontal_axis": {
            "type": "string",
            "enum": ["atoms", "bits"]
          },
          "vertical_axis": {
            "type": "string",
            "enum": ["survive", "thrive"]
          },
          "categories": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name", "projects"],
              "additionalProperties": false,
              "properties": {
                "name": {
                  "type": "string",
                  "minLength": 1
                },
                "projects": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["id", "name"],
                    "additionalProperties": false,
                    "properties": {
                      "id": {
                        "type": "string",
                        "pattern": "^[a-z0-9][a-z0-9-]*$"
                      },
                      "name": {
                        "type": "string",
                        "minLength": 1
                      },
                      "description": {
                        "type": ["string", "null"]
                      },
                      "logo_url": {
                        "type": ["string", "null"]
                      },
                      "twitter_handle": {
                        "type": ["string", "null"]
                      },
                      "website_url": {
                        "type": ["string", "null"]
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
